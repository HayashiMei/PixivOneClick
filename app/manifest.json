{
  "name": "Pixiv One Click",
  "version": "1.2.6",
  "manifest_version": 2,
  "description": "Just a simple extension.",
  "permissions": ["downloads", "storage", "*://*.pixiv.net/", "*://*.pximg.net/"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "options_page": "html/options.html",
  "content_scripts": [
    {
      "matches": ["*://*.pixiv.net/*"],
      "css": ["css/content.css"],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["image/download.svg"],
  "icons": {
    "16": "image/icon16.png",
    "32": "image/icon32.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  }
}
