{
  "name": "Pixiv One Click",
  "version": "1.0",
  "description": "Just a simple extension.",
  "permissions": [
    "downloads",
    "*://*.pixiv.net/",
    "*://*.pximg.net/"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "html/popup.html"
  },
  "manifest_version": 2,
  "content_scripts": [{
    "matches": ["*://*.pixiv.net/*"],
    "css": ["css/content.css"],
    "js": ["js/content.js"],
    "run_at": "document_start"
  }],
  "web_accessible_resources": ["image/download.png"]
}